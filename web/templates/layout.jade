doctype 5
html(itemscope, itemtype="http://schema.org/Article")
    head
        block title
            title= page.title

        meta(charset="utf-8")
        meta(name="description")= page.metadata.description

        meta(property="og:title", content=page.title)
        meta(property="og:description", content=page.metadata.description)
        meta(property="og:type", content="article")
        meta(property="og:image", content=page.metadata.image)
        meta(property="og:url", content=page.url)
        meta(property="fb:admins", content="65903256")

        meta(property="twitter:card", content="overview")
        meta(property="twitter:title", content=page.title)
        meta(property="twitter:description", content=page.metadata.description)
        meta(property="twitter:image", content=page.metadata.image)
        meta(property="twitter:url", content=page.url)

        meta(itemprop="name", content=page.title)
        meta(itemprop="description", content=page.metadata.description)
        meta(itemprop="image", content=page.metadata.image)

        link(rel="shortcut icon", href="/img/favicon.ico")
        link(rel="author", href="https://plus.google.com/u/0/117442582930902051362")
        link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Allura")
        link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Raleway")
        link(rel="stylesheet", type="text/css", href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css")
        link(rel="stylesheet", type="text/css", href="/styles/main.css?v=2")
        
    body
        block header
            nav
                .container
                    a(href="/") Home
                    - var blogUrl = env.getArticles(contents)[0].url
                    a(href=blogUrl) Blog
            .sep
        #container
            block content
                !=page.html
            #footer
                block footer
                | Website and chart code copyright &copy; 2013 Daniel G. Taylor. <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/deed.en_US">Licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/deed.en_US">CC-BY-SA License</a>.
                br
                br
                a(rel="license", href="http://creativecommons.org/licenses/by-sa/3.0/deed.en_US")
                    img(alt="Creative Commons License", style="border-width:0", src="http://i.creativecommons.org/l/by-sa/3.0/88x31.png")
                br
                br
                a(href="https://www.digitalocean.com/?refcode=1da202e90785")
                    img(src="/img/digitalocean-badge-white.png", alt="Proudly hosted by Digital Ocean")
                br
                span(style="font-size: 60%;") Use coupon <em>OMGSSD10</em> for $10 free!
                br
                br
            a(id="donate", href="https://spb.io/0rgLYyRkJK")
                i.icon-credit-card
                | &nbsp;Donate
        #fb-root
        block scripts
        - var scripts = page.metadata.scripts ? page.metadata.scripts : []
        each scriptPath in scripts
            script(src=scriptPath, charset="utf-8")
